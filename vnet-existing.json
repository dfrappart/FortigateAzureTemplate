{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "location": {
      "type": "string",
      "metadata": {
        "description": "Location"
      }
    },
    "vnetName": {
      "type": "string",
      "metadata": {
        "description": "Virtual Network name (e.g. vnet-haivision)"
      }
    },
    "vnetResourceGroup": {
      "type": "string",
      "metadata": {
        "description": "Virtual Network Resource Group"
      }
    },
    "vnetAddressPrefix": {
      "type": "string",
      "metadata": {
        "description": "Virtual Network Address Prefix (i.e. CIDR)"
      }
    },
    "OutsideSubnetName": {
      "type": "string",
      "metadata": {
        "description": "Server will be deployed into this subnet within the Virtual Network"
      }
    },
    "subnet1AddressPrefix": {
      "type": "string",
      "metadata": {
        "description": "Virtual Network subnet Address Prefix (i.e. CIDR)"
      }
    },
    "DMZSubnetName": {
      "type": "string",
      "metadata": {
        "description": "Server will be deployed into this subnet within the Virtual Network"
      }
    },
    "subnet2AddressPrefix": {
      "type": "string",
      "metadata": {
        "description": "Virtual Network subnet Address Prefix (i.e. CIDR)"
      }
    },
    "InsideSubnetName": {
      "type": "string",
      "metadata": {
        "description": "Server will be deployed into this subnet within the Virtual Network"
      }
    },
    "subnet3AddressPrefix": {
      "type": "string",
      "metadata": {
        "description": "Virtual Network subnet Address Prefix (i.e. CIDR)"
      }
    },
    "routeTable1Name": {
      "type": "string"
    },
    "routeTable2Name": {
      "type": "string"
    },
    "routeTable3Name": {
      "type": "string"
    }
  },
  "variables": {
    "vnetID": "[resourceId(parameters('vnetResourceGroup'), 'Microsoft.Network/virtualNetworks', parameters('vnetName'))]",
    "subnet1ID": "[concat(variables('vnetID'),'/subnets/',parameters('OutsideSubnetName'))]",
    "subnet2ID": "[concat(variables('vnetID'),'/subnets/',parameters('DMZSubnetName'))]",
    "subnet3ID": "[concat(variables('vnetID'),'/subnets/',parameters('InternalSubnetName'))]",
    "routeTable1Id": "[resourceId('Microsoft.Network/routeTables',parameters('routeTable1Name'))]",
    "routeTable2Id": "[resourceId('Microsoft.Network/routeTables',parameters('routeTable2Name'))]",
    "routeTable3Id": "[resourceId('Microsoft.Network/routeTables',parameters('routeTable3Name'))]",
    "apiVer": "2015-06-15"
  },
  "resources": [
	  {
        "apiVersion": "2015-06-15",
        "type": "Microsoft.Network/virtualNetworks/subnets",
        "name": "[concat(parameters('vnetName'),'/',parameters('OutsideSubnetName'))]",
        "location": "[parameters('location')]",
        "properties": {
          "addressPrefix": "[parameters('subnet1AddressPrefix')]",
          "routeTable": {
            "id": "[variables('routeTable1Id')]"
          }
        }
    },
    {
        "apiVersion": "2015-06-15",
        "type": "Microsoft.Network/virtualNetworks/subnets",
        "name": "[concat(parameters('vnetName'),'/',parameters('DMZSubnetName'))]",
        "location": "[parameters('location')]",
        "properties": {
          "addressPrefix": "[parameters('subnet2AddressPrefix')]",
          "routeTable": {
            "id": "[variables('routeTable2Id')]"
          }
        }
    },
    {
        "apiVersion": "2015-06-15",
        "type": "Microsoft.Network/virtualNetworks/subnets",
        "name": "[concat(parameters('vnetName'),'/',parameters('InternalSubnetName'))]",
        "location": "[parameters('location')]",
        "properties": {
          "addressPrefix": "[parameters('subnet3AddressPrefix')]",
          "routeTable": {
            "id": "[variables('routeTable3Id')]"
          }
        }
    }
  ],
  "outputs": {
    "subnet1ID": {
      "value": "[variables('subnet1ID')]",
      "type": "string"
    },
    "subnet2ID": {
      "value": "[variables('subnet2ID')]",
      "type": "string"
    },
    "subnet3ID": {
      "value": "[variables('subnet3ID')]",
      "type": "string"
    }
  }
}

