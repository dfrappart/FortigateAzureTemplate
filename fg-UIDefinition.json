{
  "handler": "Microsoft.Compute.MultiVm",
  "version": "0.0.1-preview",
  "parameters": {
    "basics": [
      {
        "name": "VMName",
        "type": "Microsoft.Common.TextBox",
        "label": "FortiGate VM name",
        "toolTip": "This is the name of the FortiGate virtual appliance.",
        "constraints": {
          "required": true
        }
      },
      {
        "name": "adminUsername",
        "type": "Microsoft.Compute.UserNameTextBox",
        "label": "Admin Username for the Fortigate",
        "toolTip": "Admin username for the FortiGate virtual appliance. Must not be 'admin'.",
        "osPlatform": "Linux"
      },
      {
        "name": "passwordElement",
        "type": "Microsoft.Compute.CredentialsCombo",
        "label": {
          "authenticationType": "Authentication type - Choose Password",
          "password": "FortiGate Password",
          "confirmPassword": "Confirm Password",
          "sshPublicKey": "'SSH Public Key' option not currently compatible with FortiGate"
        },
        "toolTip": {
          "authenticationType": "Authentication Type for the Linux VM - !Fortigate Web UI requires password!",
          "password": "Password for the Virtual Machine",
          "sshPublicKey": "SSH Public Key - !Fortigate Web UI requires password option - don't use SSH Key!"
        },
        "constraints": {
          "required": true
        },
        "options": {
          "hideConfirmation": false
        },
        "osPlatform": "Linux"
      }
    ],
    "steps": [
      {
        "name": "StorageNetworkConfig",
        "label": "Network and Storage Settings",
        "subLabel": {
          "preValidation": "Configure the network and storage options",
          "postValidation": "Done"
        },
        "bladeTitle": "Network and Storage Settings",
        "elements": [
          {
            "name": "virtualNetwork",
            "type": "Microsoft.Network.VirtualNetworkCombo",
            "label": {
              "virtualNetwork": "Virtual network",
              "subnets": "Subnets"
            },
            "toolTip": {
              "virtualNetwork": "Virtual Network Name",
              "subnets": "Subnets requied for the Cisco CSR solution"
            },
            "defaultValue": {
              "name": "fgvnet",
              "addressPrefixSize": "/16"
            },
            "constraints": {
              "minAddressPrefixSize": "/16"
            },
            "subnets": {
              "subnet1": {
                "label": "Outside Subnet",
                "defaultValue": {
                  "name": "outsideSubnet",
                  "addressPrefixSize": "/24"
                },
                "constraints": {
                  "minAddressPrefixSize": "/24",
                  "minAddressCount": 12,
                  "requireContiguousAddresses": false
                }
              },
              "subnet2": {
                "label": "Protected Subnet",
                "defaultValue": {
                  "name": "FGProtectedSubnet",
                  "addressPrefixSize": "/24"
                },
                "constraints": {
                  "minAddressPrefixSize": "/24",
                  "minAddressCount": 12,
                  "requireContiguousAddresses": false
                }
              }
            }
          },
          {
            "name": "publicIPAddressTypeElement",
            "type": "Microsoft.Common.OptionsGroup",
            "label": "Public IP Address Type",
            "toolTip": "",
            "defaultValue": "Static",
            "constraints": {
              "allowedValues": [
                {
                  "label": "Static",
                  "value": "Static"
                },
                {
                  "label": "Dynamic",
                  "value": "Dynamic"
                }
              ]
            }
          },
          {
            "name": "uniqueDNSPrefix",
            "type": "Microsoft.Common.TextBox",
            "label": "Unique DNS Prefix for the Public IP",
            "toolTip": "Prefix will be used in DNS record for the new public IP.",
            "constraints": {
              "required": true
            }
          },
          {
            "name": "Size",
            "type": "Microsoft.Compute.SizeSelector",
            "label": "Virtual machine size",
            "toolTip": "The size of virtual machine to provision.",
            "recommendedSizes": [
              "Standard_A3",
              "Standard_A4"
            ],
            "constraints": {
              "allowedSizes": [
                "Standard_A3",
                "Standard_A4",
                "Standard_A8",
                "Standard_A9",
                "Standard_D3",
                "Standard_D4",
                "Standard_D13",
                "Standard_D14",
                "Standard_DS4",
                "Standard_DS13",
                "Standard_DS14"
              ]
            },
            "osPlatform": "Linux",
            "imageReference": {
              "publisher": "Fortinet",
              "offer": "fortinet_fortigate-vm_v5",
              "sku": "fortinet_fg-vm"
            },
            "count": "1"
          },
          {
            "name": "storageAccount",
            "type": "Microsoft.Storage.StorageAccountSelector",
            "label": "Storage account",
            "toolTip": "Storage Account for the Virtual Machine's Disks",
            "defaultValue": {
              "type": "Standard_LRS"
            },
            "constraints": {
              "allowedTypes": [
                "Standard_LRS",
                "Standard_GRS",
                "Premium_LRS"
              ]
            }
          }
        ]
      },
      {
        "name": "fgNetworkInterface",
        "label": "FortiGate NIC Settings",
        "subLabel": {
          "preValidation": "Configure IP address for FortiGate NICs",
          "postValidation": "Done"
        },
        "bladeTitle": "FortiGate NIC Settings",
        "elements": [
          {
            "name": "FGOutsideAddress",
            "type": "Microsoft.Common.TextBox",
            "label": "Fortigate Outside Interface IP address",
            "toolTip": "This address must be in the outside subnet.",
            "defaultValue": "[steps('StorageNetworkConfig').virtualNetwork.subnets.subnet1.startAddress]",
            "constraints": {
              "required": true
            }
          },
          {
            "name": "FGProtectedAddress",
            "type": "Microsoft.Common.TextBox",
            "label": "Fortigate Protected Interface IP address",
            "toolTip": "This address must be in the protected subnet.",
            "defaultValue": "[steps('StorageNetworkConfig').virtualNetwork.subnets.subnet2.startAddress]",
            "constraints": {
              "required": true
            }
          }
        ]
      }
    ],
    "outputs": {
      "vmName": "[basics('VMName')]",
      "adminUsername": "[basics('adminUsername')]",
      "adminPassword": "[basics('password')]",
      "VirtualMachineSize": "[steps('StorageNetworkConfig').vmSize]",
      "location": "[location()]",
      "publicIPAddressType": "[steps('StorageNetworkConfig').publicIPAddressTypeElement]",
      "uniqueDnsPrefixForPublicIP": "[steps('StorageNetworkConfig').uniqueDNSPrefix]",
      "newStorageAccountName": "[steps('StorageNetworkConfig').storageAccount.name]",
      "storageAccountType": "[steps('StorageNetworkConfig').storageAccount.type]",
      "storageAccountNewOrExisting": "[steps('StorageNetworkConfig').storageAccount.newOrExisting]",
      "storageAccountExistingRG": "[steps('StorageNetworkConfig').storageAccount.resourceGroup]",
      "virtualNetworkName" : "[steps('StorageNetworkConfig').virtualNetwork.name]",
      "virtualNetworkAddressPrefix" : "[steps('StorageNetworkConfig').virtualNetwork.addressPrefix]", 
      "OutsideSubnetName" : "[steps('StorageNetworkConfig').virtualNetwork.subnets.subnet1.name]",
      "OutsideSubnetPrefix" : "[steps('StorageNetworkConfig').virtualNetwork.subnets.subnet1.addressPrefix]",
      "ProtectedSubnetName" : "[steps('StorageNetworkConfig').virtualNetwork.subnets.subnet2.name]",
      "ProtectedSubnetPrefix" : "[steps('StorageNetworkConfig').virtualNetwork.subnets.subnet2.addressPrefix]", 
      "vnetNewOrExisting" : "[steps('StorageNetworkConfig').virtualNetwork.newOrExisting]",
      "virtualNetworkExistingRGName" : "[steps('StorageNetworkConfig').virtualNetwork.resourceGroup]",
      "subnet2StartAddress" : "[steps('StorageNetworkConfig').virtualNetwork.subnets.subnet2.startAddress]",
      "fgOutsideIP": "[steps('fgNetworkInterface').FGOutsideAddress]",
      "fgProtectedIP": "[steps('fgNetworkInterface').FGProtectedAddress]"
    }
  }
}