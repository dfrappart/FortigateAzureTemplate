{
  "handler": "Microsoft.Compute.MultiVm",
  "version": "0.0.1-preview",
  "parameters": {
    "basics": [
      {
        "name": "storageAccountSelectorElement",
        "type": "Microsoft.Storage.StorageAccountSelector",
        "label": "Storage Account",
        "toolTip": "",
        "defaultValue": {
          "name":"FGNetStorage",
          "type": "Premium_LRS"
        },
        "constraints": {
          "allowedTypes": [ ],
          "excludedTypes": [ ]
        }
      },
      {
        "name": "sizeSelectorElement",
        "type": "Microsoft.Compute.SizeSelector",
        "label": "Size",
        "toolTip": "",
        "recommendedSizes": [
          "Standard_A3",
          "Standard_A4",
          "Standard_A9"
        ],
        "constraints": {
          "allowedSizes": [
            "Standard_A3",
            "Standard_A4",
            "Standard_A8",
            "Standard_A9",
            "Standard_D3",
            "Standard_D4",
            "Standard_D13",
            "Standard_D14",
            "Standard_DS4",
            "Standard_DS13",
            "Standard_DS14"
          ]
        },
        "osPlatform": "Linux",
        "imageReference": {
          "publisher": "Fortinet",
          "offer": "fortinet_fortigate-vm_v5",
          "sku": "fortinet_fg-vm"
        }
      },
      {
        "name": "publicIPAddressTypeElement",
        "type": "Microsoft.Common.OptionsGroup",
        "label": "Public IP Address Type",
        "toolTip": "",
        "defaultValue": "Static",
        "constraints": {
          "allowedValues": [
            {
              "label": "Static",
              "value": "Static"
            },
            {
              "label": "Dynamic",
              "value": "Dynamic"
            }
          ]
        }
      },
      {
        "name": "uniqueDNSPrefixElement",
        "type": "Microsoft.Common.TextBox",
        "Label": "Unique DNS Prefix for the Public IP",
        "defaultValue": "",
        "toolTip": "",
        "constraints": {
          "required": true
        }
      },
      {
        "name": "usernameElement",
        "type": "Microsoft.Compute.UserNameTextBox",
        "label": "User Name",
        "defaultValue": "",
        "toolTip": "",
        "constraints": {
          "required": true
        },
        "osPlatform": "Linux"
      },
      {
        "name": "passwordElement",
        "type": "Microsoft.Compute.CredentialsCombo",
        "label": {
          "password": "Password",
          "confirmPassword": "Confirm Password"
        },
        "toolTip": {
          "password": ""
        },
        "constraints": {
          "required": true
        },
        "options": {
          "hideConfirmation": false
        },
        "osPlatform": "Windows"
      },
      {
        "name": "newVnetNameElement",
        "type": "Microsoft.Common.TextBox",
        "Label": "New VNet Name",
        "defaultValue": "",
        "toolTip": "",
        "constraints": {
          "required": true
        }
      }
    ],
    "steps": [ ],
    "outputs": 
    {
      "VirtualMachineSize": "basics().sizeSelectorElement",
      "publicIPAddressType": "basics().publicIPAddressTypeElement",
      "uniqueDnsPrefixForVM": "basics().uniqueDNSPrefixElement",
      "newStorageAccountName": "basics().storageAccountSelectorElement.name",
      "adminUsername": "basics().usernameElement",
      "adminPassword": "basics().passwordElement",
      "virtualnetName": "basics().newVnetNameElement",
      "location": "location()"
    }
  }
  }

